{
	"name": "@hk/polymarket",
	"module": "src/index.ts",
	"version": "0.0.1",
	"private": true,
	"bin": {
		"weather": "./build/weather.js",
		"polymarket": "./build/polymarket.js"
	},
	"files": [
		"build"
	],
	"exports": {
		".": "./src/mod.ts",
		"./*": "./src/*",
		"./proxy": "./src/client.ts",
		"./sdk": "./src/sdk/index.ts",
		"./utils": "./src/utils/index.ts"
	},
	"scripts": {
		"dev": "bun run --hot src/run.ts",
		"deploy": "NODE_ENV=production wrangler deploy",
		"dev:cf": "NODE_ENV=development wrangler dev",
		"cf-typegen": "wrangler types",
		"format": "biome format --write",
		"typecheck": "biome check",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"build": "bun run build.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/bun": "latest",
		"@types/ws": "^8.18.1",
		"wrangler": "^4.30.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@cloudflare/containers": "^0.0.28",
		"@elysiajs/cors": "^1.4.0",
		"@elysiajs/eden": "^1.4.5",
		"@elysiajs/openapi": "^1.4.11",
		"@elysiajs/swagger": "^1.3.1",
		"@ethersproject/wallet": "^5.8.0",
		"@modelcontextprotocol/sdk": "^1.21.1",
		"@polymarket/clob-client": "^4.22.8",
		"effect": "^3.17.13",
		"elysia": "^1.4.16",
		"hono": "4.9.12",
		"lru-cache": "^11.1.0",
		"tslib": "^2.6.2",
		"undici": "^7.15.0",
		"ws": "^8.18.3",
		"zod": "^4.1.11"
	}
}
